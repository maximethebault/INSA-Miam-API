{
    "apiVersion":     "0.2",
    "swaggerVersion": "1.2",
    "basePath":       "http://94.23.120.133/insamiam/api",
    "apis":           [
        {
            "path":        "/api-docs/meal.json",
            "description": "Operations about meal"
        },
        {
            "path":        "/api-docs/starter.json",
            "description": "Operations about starters"
        },
        {
            "path":        "/api-docs/main.json",
            "description": "Operations about mains"
        },
        {
            "path":        "/api-docs/dessert.json",
            "description": "Operations about desserts"
        }
    ],
    "models":         {
        "meal": {
            "id":         "meal",
            "properties": {
                "id":       {
                    "type":     "long",
                    "required": true
                },
                "date":     {
                    "type": "date"
                },
                "moment":   {
                    "type": "string",
                    "enum": [ "M", " E" ]
                },
                "starters": {
                    "items": {
                        "$ref": "starter"
                    },
                    "type":  "Array"
                },
                "mains":    {
                    "items": {
                        "$ref": "main"
                    },
                    "type":  "Array"
                },
                "desserts": {
                    "items": {
                        "$ref": "dessert"
                    },
                    "type":  "Array"
                }
            }
        }
    }
}
